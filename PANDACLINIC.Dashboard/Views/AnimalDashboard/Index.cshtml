@using PANDACLINIC.Application.DTOS.Animal
@model PagedResponseDto<AnimalSummaryDto>

<div class="container-fluid py-4 bg-white">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h2 class="fw-bold text-dark mb-3 mb-md-0"><i class="bi bi-paw-fill me-2"></i>Animal Management</h2>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-lg me-1"></i> اضافه حيوات جديد
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4 rounded-3">
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="row g-2">
                <div class="col-12 col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" name="search" value="@ViewBag.SearchTerm" class="form-control border-start-0" placeholder="Search by name or species...">
                    </div>
                </div>
                <div class="col-12 col-md-2">
                    <button type="submit" class="btn btn-dark w-100 rounded-3">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive shadow-sm rounded-3">
        <table class="table table-hover align-middle bg-white mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">الاسم </th>
                    <th class="ps-4"> الصورة</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@item.Name</td>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(item.Imgageurl))
                                {
                                    <img src="@item.Imgageurl"
                                         alt="@item.Name"
                                         class="rounded-circle shadow-sm border"
                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center border"
                                         style="width: 50px; height: 50px;">
                                        <i class="bi bi-paw text-muted"></i>
                                    </div>
                                }
                                <span class="ms-3 fw-bold">@item.Name</span>
                            </div>
                        </td>
                       
                        <td class="text-end pe-4">
                            <div class="btn-group shadow-sm">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm"><i class="bi bi-eye"></i></a>
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete('@item.Id')"><i class="bi bi-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.SearchTerm })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

<form id="deleteForm" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" />
</form>

<script>
    function confirmDelete(id) {
        if(confirm('Move this animal to Recycle Bin?')) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteForm').submit();
        }
    }
</script>