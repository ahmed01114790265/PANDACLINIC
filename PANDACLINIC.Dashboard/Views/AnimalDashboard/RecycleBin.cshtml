@using PANDACLINIC.Application.DTOS.Animal
@model IEnumerable<AnimalSummaryDto>

<div class="container py-4">
    <div class="alert alert-warning d-flex align-items-center rounded-4 shadow-sm mb-4">
        <i class="bi bi-trash3-fill me-3 fs-3"></i>
        <div>
            <h5 class="mb-0 fw-bold">Recycle Bin</h5>
            <small>Records here are hidden from the main system but can be restored.</small>
        </div>
    </div>

    <div class="row g-3">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <p class="text-muted">The bin is empty.</p>
            </div>
        }
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 border-start border-danger border-4 rounded-3">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 fw-bold">@item.Name</h6>
                        </div>
                        <div class="rounded-circle shadow-sm d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 140px;
                height: 140px;
                        background-image: url('@(string.IsNullOrEmpty(@item.Imgageurl) ? "/images/default-animal.png" : @item.Imgageurl)');
                background-size: cover;
                background-position: center;
                border: 3px solid #f8f9fa;">

                            @if (string.IsNullOrEmpty(@item.Imgageurl))
                            {
                                <i class="bi bi-paw text-primary display-4"></i>
                            }
                        </div>
                        <form asp-action="Restore" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="bi bi-arrow-counterclockwise"></i> Restore Pet
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>