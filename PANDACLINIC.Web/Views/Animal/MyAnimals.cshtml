@using PANDACLINIC.Application.DTOS.Animal
@model IEnumerable<AnimalSummaryDto>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div dir="rtl">
            <h2 class="fw-bold text-primary mb-1">حيواناتي المسجلة</h2>
            <p class="text-muted">إدارة الحيوانات الأليفة الخاصة بك في نظامنا</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> إضافة حيوان جديد
        </a>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var animal in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                        <img src="@(string.IsNullOrEmpty(animal.Imgageurl) ? "/images/default-pet.png" : animal.Imgageurl)"
                             class="card-img-top" alt="@animal.Name"
                             style="height: 200px; object-fit: cover;">

                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@animal.Name</h5>
                            <div class="d-flex justify-content-center gap-2">
                                @* <a asp-action="Details" asp-route-id="@animal.Id" class="btn btn-sm btn-outline-primary">التفاصيل</a> *@
                               @*  <form asp-action="Delete" asp-route-id="@animal.Id" method="post" onsubmit="return confirm('هل أنت متأكد؟');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">حذف</button>
                                </form> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
        }
    </div>
</div>